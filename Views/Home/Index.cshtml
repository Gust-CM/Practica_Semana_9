@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Práctica Semana 9";
}

<div class="text-center my-5 fadein">
    <h1 class="fw-bold display-5 mb-3">Práctica Semana 9</h1>
    <p class="lead text-muted">
        Dos módulos independientes con un diseño profesional:<br>
        <strong>Biblioteca Campus</strong> y <strong>TechWorkshops</strong>.
    </p>
</div>

<div class="row g-4 fadein">

    <!-- Tarjeta Libros -->
    <div class="col-md-6">
        <div class="card shadow home-card border-0 h-100 p-2">

            <div class="card-body p-4">

                <div class="d-flex align-items-center mb-3">
                    <div class="icon-box bg-primary text-white">
                        <i class="bi bi-book"></i>
                    </div>
                    <h4 class="ms-3 fw-bold mb-0">Biblioteca Campus</h4>
                </div>

                <p class="text-muted mb-4">
                    Administra libros con validaciones avanzadas. Perfecto para gestionar un catálogo escolar o académico.
                </p>

                <a asp-controller="Libro" asp-action="Index"
                   class="btn btn-primary d-inline-flex align-items-center gap-2 px-4 py-2 fw-semibold">
                    <i class="bi bi-box-arrow-in-right"></i> Entrar
                </a>

            </div>
        </div>
    </div>

    <!-- Tarjeta Inscripciones -->
    <div class="col-md-6">
        <div class="card shadow home-card border-0 h-100 p-2">

            <div class="card-body p-4">

                <div class="d-flex align-items-center mb-3">
                    <div class="icon-box bg-success text-white">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <h4 class="ms-3 fw-bold mb-0">TechWorkshops</h4>
                </div>

                <p class="text-muted mb-4">
                    Registra participantes con validaciones modernas y seguras. Especial para talleres y cursos.
                </p>

                <a asp-controller="Inscripcion" asp-action="Index"
                   class="btn btn-success d-inline-flex align-items-center gap-2 px-4 py-2 fw-semibold">
                    <i class="bi bi-box-arrow-in-right"></i> Entrar
                </a>

            </div>
        </div>
    </div>

</div>
