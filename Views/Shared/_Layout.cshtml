<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - PracticaSemana9</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        body {
            background: #f6f7fb;
            font-family: "Segoe UI", sans-serif;
        }

        .navbar-custom {
            backdrop-filter: blur(12px);
            background: rgba(255,255,255,0.8) !important;
            border-bottom: 1px solid #e2e2e2;
        }

        .footer-custom {
            border-top: 1px solid #e5e5e5;
            background: #fafafa;
            padding: 15px 0;
        }
    </style>

</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light navbar-custom shadow-sm">
        <div class="container">

            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <i class="bi bi-grid"></i> PracticaSemana9
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="navMain" class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">

                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Libro" asp-action="Index" class="nav-link">Libros</a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Inscripcion" asp-action="Index" class="nav-link">Inscripciones</a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Privacy" class="nav-link">Privacy</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="footer-custom text-center text-muted small">
        © @DateTime.Now.Year - PracticaSemana9
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>