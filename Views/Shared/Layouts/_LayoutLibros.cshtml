@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Biblioteca Campus</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background: #f3f6fb;
        }

        .topbar {
            background: #0d6efd;
            padding: 0.7rem 1.2rem;
            color: white;
        }

            .topbar .brand {
                font-size: 1.4rem;
                font-weight: 600;
            }

        .header-card {
            background: #0d6efd;
            color: white;
            padding: 1.4rem;
            border-radius: .5rem;
            margin-bottom: 1.5rem;
        }

        .page-content {
            padding-top: 1.5rem;
        }

        footer {
            padding: 1rem 0;
            margin-top: 2rem;
            color: #6c757d;
        }
    </style>
</head>

<body>

    <div class="topbar d-flex justify-content-between align-items-center">
        <div class="brand">
            <i class="bi bi-book"></i> Biblioteca Campus
        </div>

        <nav>
            <a asp-controller="Libro" asp-action="Index" class="text-white me-3">Listado</a>
            <a asp-controller="Libro" asp-action="Crear" class="text-white me-3">Nuevo</a>
            <a asp-controller="Home" asp-action="Index" class="text-white">Inicio</a>
        </nav>
    </div>

    <div class="container page-content">
        @RenderBody()
    </div>

    <footer class="text-center small">
        © @DateTime.Now.Year - Biblioteca Campus
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
